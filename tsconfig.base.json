{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@osm/lib": ["packages/lib/index.ts"],
      "@osm/types": ["packages/types/index.ts"],
      "@osm/ui": ["packages/ui/index.ts"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
